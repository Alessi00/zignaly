{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "outDir": "types",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "removeComments": false,
    "pretty": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "test-utils": [
        "utils/test/test-utils"
      ]
    },
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "static/charting_library"
  ],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}

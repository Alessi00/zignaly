{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "allowJs": true,
        "checkJs": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "declaration": false,
        "emitDeclarationOnly": false,
        "outDir": "types",
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ],
        "removeComments": false,
        "pretty": true
    },
    "include": [
        "./src/**/*",
        "types/global.d.ts"
    ],
    "typeRoots": [
        "./src/types",
        "./node_modules/@types"
    ]
}
